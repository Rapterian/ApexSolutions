@{
    ViewData["Title"] = "Client Dashboard - ApexSolutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <h1>ApexSolutions</h1>
</header>

<main>
    <h2>Client Dashboard</h2>
    <input type="text" placeholder="Search">
    <table>
        <thead>
            <tr>
                <th>Service</th>
                <th>Status</th>
                <th>Technician</th>
                <th>Date</th>
                <th>Complete</th>
            </tr>
        </thead>
        <tbody>
            <!-- Rows for service details go here -->
        </tbody>
    </table>

    <button>Create Service</button>
    <button>View Service</button>
</main>





<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    table, th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
    }

    button {
        margin: 10px 5px;
    }

</style>
