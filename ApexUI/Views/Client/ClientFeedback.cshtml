@{
    ViewData["Title"] = "Feedback - ApexSolutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <h1>ApexSolutions</h1>
</header>

<main>
    <h2>Feedback</h2>
    <div class="rating">
        <p>★★★★★</p>
    </div>

    <label for="feedback">Feedback:</label>
    <textarea id="feedback" name="feedback"></textarea>

    <button type="submit">Submit</button>
</main>





<style>
    .rating {
        font-size: 24px;
        text-align: center;
        margin: 20px 0;
    }

    textarea {
        width: 100%;
        height: 100px;
        margin-top: 10px;
    }

    button {
        display: block;
        margin: 20px auto;
    }

</style>
