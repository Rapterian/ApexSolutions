@page
@model ApexUI.Pages.RegisterModel
@{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="globals.css" />
        <link rel="stylesheet" href="~/css/style.css" />
    </head>
    <body>
        <div class="register">
            <div class="div">
                <div class="overlap">
                    <div class="text-wrapper">Register</div>
                </div>
                <form>
                    @Html.AntiForgeryToken()
                    <div class="text-wrapper-2">Name:</div>
                    <input type="text" class="input-field" placeholder="Enter your name" />

                    <div class="text-wrapper-3">Email:</div>
                    <input type="email" class="input-field" placeholder="Enter your email" />

                    <div class="text-wrapper-4">Password:</div>
                    <input type="password" class="input-field" placeholder="Enter your password" />

                    <div class="text-wrapper-5">Phone:</div>
                    <input type="text" class="input-field" placeholder="Enter your phone number" />

                    <div class="text-wrapper-6">Address:</div>
                    <input type="text" class="input-field" placeholder="Enter your address" />

                    <div class="overlap-group">
                        <button href="Login" class="register-button">Register</button> <!-- Changed to button -->
                    </div>
                </form>

                <div class="text-wrapper-9">
                    <a href="Login" class="already-registered">Already have an account?</a> <!-- Link to login.html -->
                </div>
            </div>
        </div>
    </body>
    </html>
}
